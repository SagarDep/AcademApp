<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textColor">@color/Asphalt_grey</item>
        <item name="colorPrimary">@color/Emerald_flat</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/Asphalt_grey</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:statusBarColor">@color/Emerald_flat</item>
    </style>

    <style name="SplashPageTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_page</item>
    </style>

    <style name="NoFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/Emerald_flat</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="CondensedTextTheme" parent="Theme.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:colorControlHighlight">@color/Emerald_flat</item>
        <item name="android:padding">6dp</item>
        <item name="android:colorButtonNormal">@color/Asphalt_grey</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.FontPath.Medium</item>
    </style>

    <style name="TextAppearance.FontPath.Medium" parent="android:TextAppearance">
        <item name="fontPath">fonts/medium.ttf</item>
    </style>

    <style name="TextAppearance.FontPath.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/regular.ttf</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <!-- Bottom line color state lists here -->
        <item name="android:colorControlHighlight">@color/Asphalt_grey</item>
        <item name="android:colorControlActivated">@color/Emerald_flat</item>
        <item name="android:colorControlNormal">@color/Dark_green</item>

        <!-- Text Appearance customized here -->
        <item name="android:textColor">@color/Asphalt_grey</item>
    </style>

    <style name="TextInputLayoutTheme.HintAppearance" parent="TextAppearance.Design.Hint">
        <!-- TextInputLayout hint text appearance here -->
        <item name="android:textColor">@color/Emerald_flat</item>
    </style>

    <style name="TextInputLayoutTheme.ErrorAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/red_danger</item>
        <item name="android:textAppearance">@style/TextAppearance.FontPath.Regular</item>
    </style>

    <style name="SpinnerStyle.Text" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/Asphalt_grey</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
